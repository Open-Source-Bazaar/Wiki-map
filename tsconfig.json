{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES2022",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "downlevelIteration": true,
        "useDefineForClassFields": true,
        "jsx": "react-jsx",
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "sourceMap": true,
        "outDir": "./dist/"
    },
    "include": ["src/**/*"]
}
